<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio3_1PMII.Views.ListaAlumnosPage">
    <ContentPage.Content>

        <ListView x:Name="lstAlumnos">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding nombres}" VerticalOptions="CenterAndExpand"/>
                            <Button Text="Editar" Clicked="Editar_Clicked" CommandParameter="{Binding .}" VerticalOptions="CenterAndExpand"/>
                            <Button Text="Eliminar" Clicked="Eliminar_Clicked" CommandParameter="{Binding .}" VerticalOptions="CenterAndExpand"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


    </ContentPage.Content>
    
</ContentPage>