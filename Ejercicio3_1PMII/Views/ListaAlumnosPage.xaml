<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio3_1PMII.Views.ListaAlumnosPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="lstAlumnos">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Image Source="{Binding Imagen}" WidthRequest="100" HeightRequest="100" />
                                <Label Text="{Binding Nombres}" VerticalOptions="CenterAndExpand"/>
                                <Label Text="{Binding Apellidos}" VerticalOptions="CenterAndExpand"/>
                                <Button Text="Editar" Clicked="Editar_Clicked" CommandParameter="{Binding .}" VerticalOptions="CenterAndExpand" BackgroundColor="DeepSkyBlue" />
                                <Button Text="Eliminar" Clicked="Eliminar_Clicked" CommandParameter="{Binding .}" VerticalOptions="CenterAndExpand" BackgroundColor="DeepSkyBlue"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
