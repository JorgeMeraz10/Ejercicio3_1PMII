<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio3_1PMII.Views.EditarAlumnoPage">
    <ContentPage.Content>

        <StackLayout>
            <Entry Placeholder="Nombres" x:Name="nombresEntry"/>
            <Entry Placeholder="Apellidos" x:Name="apellidosEntry"/>
            <Entry Placeholder="Sexo" x:Name="sexoEntry"/>
            <Entry Placeholder="Dirección" x:Name="direccionEntry"/>
            
            <Button Text="Guardar Cambios" Clicked="GuardarCambios_Clicked"/>
           
        </StackLayout>


    </ContentPage.Content>
</ContentPage>